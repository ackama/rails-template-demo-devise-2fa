<div class="container mt-3">
  <div class="row">
    <div class="col">
      <%# Notice %>
      <% if flash[:notice].present? %>
        <div role="alert" class="alert alert-success"><%= flash[:notice] %></div>
      <% end %>

      <%# Alert %>
      <% if flash[:alert].present? %>
        <div role="alert" class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>
    </div>
  </div>
</div>
